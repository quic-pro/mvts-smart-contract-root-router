{
  "name": "mvts-smart-contract-root-router",
  "version": "0.2.0",
  "description": "Smart contract for decentralized phone numbering plan.",
  "scripts": {
    "test": "hardhat test --typecheck",
    "lint": "solhint 'contracts/**/*.sol'",
    "compile": "hardhat compile",
    "coverage": "hardhat coverage",
    "deploy:eth-sepolia": "hardhat run scripts/deploy.ts --network eth-sepolia",
    "deploy:eth-mainnet": "hardhat run scripts/deploy.ts --network eth-mainnet",
    "deploy:polygon-mumbai": "hardhat run scripts/deploy.ts --network polygon-mumbai",
    "deploy:polygon-mainnet": "hardhat run scripts/deploy.ts --network polygon-mainnet",
    "deploy:bsc-testnet": "hardhat run scripts/deploy.ts --network bsc-testnet",
    "deploy:bsc-mainnet": "hardhat run scripts/deploy.ts --network bsc-mainnet",
    "verify:eth-sepolia": "hardhat verify RootRouter --network eth-sepolia",
    "verify:eth-mainnet": "hardhat verify RootRouter --network eth-mainnet",
    "verify:polygon-mumbai": "hardhat verify RootRouter --network polygon-mumbai",
    "verify:polygon-mainnet": "hardhat verify RootRouter --network polygon-mainnet",
    "verify:bsc-testnet": "hardhat verify RootRouter --network bsc-testnet",
    "verify:bsc-mainnet": "hardhat verify RootRouter --network bsc-mainnet"
  },
  "author": {
    "name": "Sergey Bondarenko QUIC-PRO Inc. developer",
    "email": "sergey@quic.pro"
  },
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@openzeppelin/contracts": "^4.8.0",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^9.1.0",
    "@types/node": "^18.11.12",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "envalid": "^7.3.1",
    "hardhat": "^2.12.4",
    "solhint": "^3.3.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
